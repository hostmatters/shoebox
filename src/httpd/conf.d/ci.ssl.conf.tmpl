<VirtualHost *:80>

ServerName ci.@YOUR_DOMAIN
ServerAlias www.ci.@YOUR_DOMAIN

RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteRule ^/?(.*) https://%{SERVER_NAME}/$1 [R,NE,L]

</VirtualHost>


<VirtualHost *:443>

ServerName ci.@YOUR_DOMAIN
ServerAlias www.ci.@YOUR_DOMAIN

# Logging
LogLevel warn
ErrorLog /var/log/httpd/ci.@YOUR_DOMAIN-error_log
CustomLog /var/log/httpd/ci.@YOUR_DOMAIN-access_log combined

# Reverse proxy configuration
<Location />
ProxyPass http://localhost:10380/
ProxyPassReverse http://localhost:10380/
</Location>

Include /etc/letsencrypt/options-ssl-apache.conf

</VirtualHost>